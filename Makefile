VERSION := 0.11.1
LDFLAGS=-ldflags="-X github.com/victorcoder/dkron/dkron.Version=${VERSION}"

default: build

.PHONY: build
build:
	$(foreach p,$(PLUGINS),$(shell go build -o $(p) ./builtin/bins/$(p)))
	go build ${LDFLAGS} -o main .

LINUX_PKGS := $(wildcard dist/*.deb) $(wildcard dist/*.rpm)
.PHONY: fury $(LINUX_PKGS)
fury: $(LINUX_PKGS)
$(LINUX_PKGS):
	fury push $@

.PHONY: clean
clean:
	rm -f main
	rm -f *_SHA256SUMS
	rm -f dkron-*
	rm -rf build/*
	rm -rf builder/skel/*
	rm -f *.deb
	rm -f *.rpm
	rm -f *.tar.gz
	rm -rf tmp

.PHONY: doc apidoc gen test
doc:
	cd website; hugo -d ../public
	ghp-import -p public

apidoc:
	java -jar ~/bin/swagger2markup-cli-1.2.0.jar convert -i website/content/swagger.yaml -f website/content/usage/api -c docs/config.properties

gen:
	go generate ./dkron
	go fmt ./dkron/bindata.go

test:
	@bash --norc -i ./scripts/test
